<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencoding.wherego.repository.interfaces.admin.AdminCsNoticeRepository"> 
	

	<insert id="insert">
		insert into admin_cs_notice(title, content, mem_id, rdate)
		values(#{title}, #{content}, #{memId}, now())
	</insert>
	
	<update id="updateById">
		update admin_cs_notice set title = #{title}, content = #{content} where mem_id = #{memId} 
	</update>
	
	<delete id="deleteById">
		delete from admin_cs_notice where mem_id = #{memId}
	</delete>
	
	<select id="findById" resultType="com.tencoding.wherego.repository.model.admin.AdminCsNotice">
		select * from admin_cs_notice where mem_id = #{memId}
	</select>
	
	<select id="findAll" resultType="com.tencoding.wherego.repository.model.admin.AdminCsNotice">
		select * from admin_cs_notice
	</select>
	
	<select id="findByMemId" resultType="com.tencoding.wherego.repository.model.admin.AdminCsNotice">
		select * from admin_cs_notice where mem_id = #{memId}
	</select>
	
</mapper>